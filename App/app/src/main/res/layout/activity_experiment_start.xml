<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hcicourse.hciproject.activities.ExperimentStart_activity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome!"
        android:id="@+id/activity_experiment_start_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In this experiment you will"
        android:id="@+id/activity_experiment_start_notes_1"
        android:layout_below="@id/activity_experiment_start_welcome"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&#8226;"
        android:id="@+id/activity_experiment_start_dot_1"
        android:layout_below="@id/activity_experiment_start_notes_1"
        android:layout_marginRight="4dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Learn how to interact with and unlock 3 different lock screens"
        android:id="@+id/activity_experiment_start_notes_2"
        android:paddingTop="28px"
        android:layout_toRightOf="@id/activity_experiment_start_dot_1"
        android:layout_alignTop="@id/activity_experiment_start_dot_1"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&#8226;"
        android:id="@+id/activity_experiment_start_dot_2"
        android:layout_below="@id/activity_experiment_start_dot_1"
        android:layout_marginRight="4dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Practice unlocking on each interface"
        android:id="@+id/activity_experiment_start_notes_3"
        android:paddingTop="28px"
        android:layout_toRightOf="@id/activity_experiment_start_dot_2"
        android:layout_alignTop="@id/activity_experiment_start_dot_2"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="&#8226;"
        android:id="@+id/activity_experiment_start_dot_3"
        android:layout_below="@id/activity_experiment_start_dot_2"
        android:layout_marginRight="4dp"
        android:layout_marginTop="-20dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test the interfaces with given passwords"
        android:id="@+id/activity_experiment_start_notes_4"
        android:paddingTop="28px"
        android:layout_toRightOf="@id/activity_experiment_start_dot_3"
        android:layout_alignTop="@id/activity_experiment_start_dot_3"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/activity_experiment_start_interface_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/welcome_image"
        android:layout_marginTop="28dp"
        android:layout_below="@id/activity_experiment_start_notes_4"
        android:background="#000"
        android:padding="0.5dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Experiment"
        android:id="@+id/activity_experiment_start_button_start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    


</RelativeLayout>
