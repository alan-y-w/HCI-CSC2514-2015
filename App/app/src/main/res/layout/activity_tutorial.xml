<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hcicourse.hciproject.activities.Tutorial_activity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="#000000"
        android:id="@+id/tutorial_videoview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="80dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_play"
        android:layout_alignTop="@+id/tutorial_videoview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8226;"
        android:id="@+id/activity_tutorial_textView_dot_0"
        android:layout_below="@id/tutorial_videoview"
        android:layout_marginRight="4dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock as quickly and accurately as possible"
        android:id="@+id/textView5"
        android:layout_toRightOf="@id/activity_tutorial_textView_dot_0"
        android:layout_alignTop="@id/activity_tutorial_textView_dot_0"
        android:paddingTop="12dp"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Key takeaways: "
        android:id="@+id/activity_tutorial_textView_heading"
        android:layout_above="@id/activity_tutorial_textView_dot_0"
        android:paddingTop="8dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8226;"
        android:id="@+id/activity_tutorial_textView_dot_1"
        android:layout_below="@id/textView5"
        android:layout_marginRight="4dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Only use your dominant hand"
        android:id="@+id/textView6"
        android:layout_toRightOf="@id/activity_tutorial_textView_dot_1"
        android:layout_alignTop="@id/activity_tutorial_textView_dot_1"
        android:paddingTop="12dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&#8226;"
        android:id="@+id/activity_tutorial_textView_dot_2"
        android:layout_below="@id/textView6"
        android:layout_marginRight="4dp"
        android:textSize="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will have 5 minutes of practice time"
        android:id="@+id/textView7"
        android:layout_toRightOf="@id/activity_tutorial_textView_dot_2"
        android:layout_alignTop="@id/activity_tutorial_textView_dot_2"
        android:paddingTop="12dp"
        android:textSize="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:id="@+id/tutorial_proceed_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
